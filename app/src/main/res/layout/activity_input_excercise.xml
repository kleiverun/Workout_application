<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      tools:context=".InputExercise">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your: "
             android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
             android:id="@+id/edttxt_exercise"
            android:layout_width="209dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="@string/excerciseName"
            android:inputType="textPersonName" />

        <EditText
             android:id="@+id/edttxt_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edttxt_sets"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
             android:id="@+id/edttxt_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edttxt_reps"
            android:inputType="number" />

        <EditText
            android:id="@+id/edttxt_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Weight"
            android:inputType="numberDecimal" />

        <RadioGroup
            android:id="@+id/rdoGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/rdo_chest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chest"
                />

            <RadioButton
                android:id="@+id/rdo_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back" />

            <RadioButton
                android:id="@+id/rdo_legs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Legs"
                tools:text="Legs" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add workout"
                 />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_dynamic_tertiary80"
                android:text="Clear workout" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>